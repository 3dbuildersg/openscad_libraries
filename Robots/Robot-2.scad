module eye()
{
    difference()
    {
        cylinder(3,3,3, true);
        cylinder(3,2,2, true);
    }
}
module ears()
{
    translate([10,0,0])sphere(5);
    translate([-10,0,0])sphere(5);
}
module nose()
{
    translate([0,-2,8]) rotate([0,0,0]) cylinder(8,2,1, true);
}
module mouth()
{
    difference()
    {
        cube([10,4,3], true);
        cube([8,3,3], true);
    }
}
